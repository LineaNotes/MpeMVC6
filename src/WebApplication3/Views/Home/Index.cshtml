@using System.Security.Claims

@{
	ViewData["Title"] = "Domača stran";
}

<article class="row body-content">
	<div class="col-md-offset-3 col-md-6">
		<h2>Pozdravljeni!</h2>
		<p class="lead">
			Nahajate se na vstopni strani spletne aplikacije za meritev porabe energije v podjetju
			CPG, d.d.. Za povezavo na domačo stran podjetja kliknite semkaj - <a href="http://www.cpg.si/">CPG, d.d.</a>.
			S prijavo v aplikacijo soglašate s splošnimi pogoji za uporabo te aplikacije.
			Vsako ravnanje je na vašo odgovornost. Želimo vam lep in produktiven obisk.
		</p>
		@if (!User.IsSignedIn())
		{
			<a asp-controller="Account" asp-action="login" class="btn btn-lg btn-success col-md-3 col-md-offset-4">Vstopi</a>
		}
	</div>
</article>