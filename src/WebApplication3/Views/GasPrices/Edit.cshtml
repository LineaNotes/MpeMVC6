@model WebApplication3.Models.GasPrice

@{
	ViewData["Title"] = "Uredi";
}

<article class="row body-content">
	<div class="col-sm-offset-3 col-sm-6">
		<h3>Uredi</h3>

		<form asp-action="Edit">
			<div class="form-horizontal">
				<h4>Cena plina</h4>
				<hr/>
				<div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="Id"/>
				<div class="form-group">
					<label asp-for="GDate" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						<input asp-for="GDate" class="form-control"/>
						<span asp-validation-for="GDate" class="text-danger" />
					</div>
				</div>
				<div class="form-group">
					<label asp-for="GPrice" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						<input asp-for="GPrice" class="form-control"/>
						<span asp-validation-for="GPrice" class="text-danger" />
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<input type="submit" value="Shrani" class="btn btn-default"/>
					</div>
				</div>
			</div>
		</form>

		<div>
			<a asp-action="Index">Nazaj na seznam</a>
		</div>
	</div>
</article>

@section Scripts {
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}